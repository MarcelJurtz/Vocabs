<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jurtz.marcel.vocabs.EditVocabActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/llLessonContainer">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lesson_button_spacing"
                android:textColor="@color/colorPrimary"
                android:text="@string/edit_vocab_question"/>
            <EditText
                android:id="@+id/txtVocabQuestion"
                style="@style/vocab_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lesson_button_spacing"
                android:textColor="@color/colorPrimary"
                android:text="@string/edit_vocab_answer"/>
            <EditText
                android:id="@+id/txtVocabAnswer"
                style="@style/vocab_textview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/lesson_button_spacing"
                android:textColor="@color/colorPrimary"
                android:text="@string/edit_vocab_information"/>
            <EditText
                android:id="@+id/txtVocabInfo"
                style="@style/vocab_textview" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lesson_button_spacing"
                android:layout_marginBottom="@dimen/lesson_button_spacing"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/cancel_64"
                    android:background="?android:selectableItemBackground"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/confirm_64"
                    android:background="?android:selectableItemBackground"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
