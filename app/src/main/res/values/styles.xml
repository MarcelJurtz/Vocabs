<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="lessonButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lesson_button_height</item>
        <item name="android:background">@drawable/lesson_button</item>
        <item name="android:layout_marginLeft">@dimen/lesson_button_spacing</item>
        <item name="android:layout_marginRight">@dimen/lesson_button_spacing</item>
        <item name="android:layout_marginTop">@dimen/lesson_button_spacing</item>
        <item name="android:layout_marginBottom">@dimen/lesson_button_spacing</item>
        <item name="android:textColor">@color/pattern_blue</item>
    </style>

    <style name="lessonButtonTop" parent="lessonButton">
        <item name="android:layout_marginTop">@dimen/lesson_button_top_spacing</item>
    </style>

</resources>
